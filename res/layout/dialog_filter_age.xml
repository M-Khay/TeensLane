<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/age_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/filter_age_from_input"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/age_from_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_from"
            android:layout_margin="10dp" />
        
         <TextView
             android:id="@+id/age_to"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/age_from_input"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:text="@string/filter_age_to_input"
             android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/age_to_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_to"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/age_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/age_to_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/teenslane_confirm" />

</RelativeLayout>