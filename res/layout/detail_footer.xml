<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_navigation"
    android:layout_width="fill_parent"
    android:layout_height="98dp" >
    
	<RelativeLayout
	    android:id="@+id/detail_navigation_buttons"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
	
	    <ImageView
	        android:id="@+id/detail_button1"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:layout_alignLeft="@+id/center_helper"
	        android:layout_alignParentLeft="false"
	        android:layout_alignParentTop="false"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="-130dp"
	        android:clickable="true"
	        android:src="@drawable/css_detail_info" />
	
	    <ImageView
	        android:id="@+id/detail_button4"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:layout_alignParentRight="false"
	        android:layout_alignParentTop="false"
	        android:layout_alignRight="@+id/center_helper"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="-130dp"
	        android:clickable="true"
	        android:src="@drawable/css_detail_map" />
	
	    <ProgressBar
	        android:id="@+id/center_helper"
	        android:layout_width="wrap_content"
	        android:layout_height="90dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:visibility="invisible" />
	
	    <ImageView
	        android:id="@+id/detail_button2"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:layout_alignLeft="@+id/center_helper"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="-50dp"
	        android:clickable="true"
	        android:src="@drawable/css_detail_gallery" />
	
	    <ImageView
	        android:id="@+id/detail_button3"
	        android:layout_width="65dp"
	        android:layout_height="65dp"
	        android:layout_alignRight="@+id/center_helper"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="-50dp"
	        android:clickable="true"
	        android:src="@drawable/css_detail_messages" />
	
	</RelativeLayout>

